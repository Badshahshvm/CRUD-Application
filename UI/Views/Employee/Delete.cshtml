@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center rounded-top">
            <h4 class="mb-0">Delete Employee</h4>
            <i class="bi bi-trash-fill fs-3"></i>
        </div>
        <div class="card-body text-center">
            <h5 class="text-danger fw-bold mb-4">Are you sure you want to delete this employee?</h5>

            <!-- Employee Profile Card -->
            <div class="row align-items-center">
                @* <div class="col-md-4">
                    <img src="~/photos/@Model.PhotoFileName" 
                         alt="@Model.Name" 
                         class="img-fluid rounded-circle border border-3 border-danger shadow-sm" 
                         style="max-width: 180px; height: 180px; object-fit: cover;">
                </div> *@
                <div class="col-md-8 text-start">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4 fw-bold">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">Code</dt>
                        <dd class="col-sm-8">@Model.Code</dd>

                        <dt class="col-sm-4 fw-bold">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.DOB.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-4 fw-bold">City</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4 fw-bold">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>
                </div>
            </div>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" class="mt-4" id="deleteForm">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-4 me-3">
                    <i class="bi bi-trash-fill me-2"></i>Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                </a>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript Delete Confirmation -->
@section Scripts {
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            if (!confirm("⚠️ Are you sure you want to delete this employee? This action cannot be undone.")) {
                event.preventDefault();
            }
        });
    </script>
}
